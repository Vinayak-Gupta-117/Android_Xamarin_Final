<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Final_Xamarin_App.HomePage"
            xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
            android:TabbedPage.ToolbarPlacement="Bottom"
            NavigationPage.HasNavigationBar="False"
            xmlns:local="clr-namespace:Final_Xamarin_App" 
            BarTextColor="#121212" BarBackgroundColor="#fff" android:TabbedPage.IsSmoothScrollEnabled="True">
    
    <NavigationPage Title="News"  IconImageSource="news.png">
        <x:Arguments>
            <local:NewsPage />
        </x:Arguments>
    </NavigationPage>
    <local:User Title="Profile" IconImageSource="user.png"/>
</TabbedPage>